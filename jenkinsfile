pipeline {
    agent any

    environment {
        DOCKER_IMAGE = 'spring-pet-clinic'
        DOCKER_TAG = 'latest'
    }
    
    stages {
        stage('Checkout') {
            steps {
                git 'https://github.com/MennaOm/Jenkins-Spring-boot'
            }
        }
                
        stage('Build') {
            steps {
                sh 'mvn clean install -DskipTests'
            }
        }

        stage('Test') {
            steps {
                sh 'mvn test'
            }
        }

        stage('Package') {
            steps {
                sh 'mvn package -DskipTests'
            }
        }

        stage('Docker Build') {
            steps {
                script {
                    sh "docker build -t ${DOCKER_IMAGE}:${DOCKER_TAG} ."
                }
            }
        }
    }

    post {
        success {
            echo ' Build and Docker image creation succeeded!'
        }
        failure {
            echo ' Build or Docker build failed!'
        }
    }
}
